[user]
    name = M. TarÄ±k Yurt
    email = mtyurt@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold
    commit = yellow bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    tool = nvim -d
    noprefix = true
[difftool]
    prompt = false
[merge]
    tool = nvim -d
    conflictstyle = merge
[mergetool]
    prompt = false
[mergetool "vscode"]
    cmd = code --wait $MERGED
[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[push]
    default = simple
[core]
    autocrlf = input
    editor = /opt/homebrew/bin/nvim
    filemode = true
    excludesfile = ~/.dotfiles/gitignore
    trustctime = false
    hooksPath = ~/.dotfiles/githooks
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[rebase]
    autostash = true
[alias]
    ca = commit --amend
    can = commit --amend --no-edit
    co = checkout
    rc = rebase --continue
    ri = rebase -i
    ria = rebase -i --autosquash
    please = push --force-with-lease
    plf = pull --force
    dff = diff --color-moved
    ds = diff --color-moved --staged
    cf = "!f() { git commit --fixup=$1; }; f"
    fixup = "!f() { git commit -m\"fixup! $(git log -1 --pretty=%s $1)\"; }; f"
    f = fetch --all --prune
    today = log --since=00:00:00 --all --no-merges --oneline --author=mtyurt@gmail.com
    logsince = "!f() { git log --since=$1 --all --no-merges --oneline --author=mtyurt@gmail.com; }; f"
    branch-name = "!f() { printf $(git rev-parse --abbrev-ref HEAD);}; f"
    remote-branch = rev-parse --abbrev-ref --symbolic-full-name @{u}
    rho = "!git reset --hard $(git remote-branch)"
    git = !exec git
    revise = !git-revise
    setup-fetching-prs = "!git config --add remote.origin.fetch '+refs/pull/*/head:refs/remotes/origin/pr/*' && git fetch origin"
    delete-merged-branches = "!git branch --merged | grep -v master | grep -v main | grep -v '\\*' | xargs -n 1 git branch -d"
    diff-branch = "!gdf $1 $2"
    copy-branch-name = "!git branch-name | pbcopy"
    copy-commit-sha = "!f() { printf $(git rev-parse --verify HEAD);}; f | pbcopy"
    cbn = "!git copy-branch-name"
    ccs = "!git copy-commit-sha"
    wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
[rerere]
    enabled = true
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[oh-my-zsh]
    hide-status = 1
[pull]
    rebase = true
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[init]
    defaultBranch = main
[url "https://"]
    insteadOf = git://
