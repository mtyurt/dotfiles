[user]
	name = M. TarÄ±k Yurt
	email = mtyurt@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
	 tool = vimdiff
[difftool]
	 prompt = false
[merge]
	 tool = vimdiff
	 conflictstyle = merge
[mergetool]
	 prompt = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[mergetool "meld"]
	 trustExitCode = true
	 cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[push]
	default = simple
[core]
    autocrlf = input
    editor = /usr/local/bin/vim
	filemode = true
	excludesfile = ~/.dotfiles/gitignore
	trustctime = false
	hooksPath = ~/.dotfiles/githooks
	pager = diff-so-fancy | less --tabs=4 -RFX
[rebase]
	autostash = true
[alias]
    ca = commit --amend
    can = commit --amend --no-edit
	co = checkout
	rc = rebase --continue
    ri = rebase -i
    ria = rebase -i --autosquash
	please = push --force-with-lease
	plf = pull --force
    dff = diff --color-moved
	ds = diff --color-moved --staged
    cf = "!f() { git commit --fixup=$1; }; f"
	today = log --since=00:00:00 --all --no-merges --oneline --author=mtyurt@gmail.com
	logsince = "!f() { git log --since=$1 --all --no-merges --oneline --author=mtyurt@gmail.com; }; f"
	branch-name = "!git rev-parse --abbrev-ref HEAD"
	remote-branch = rev-parse --abbrev-ref --symbolic-full-name @{u}
	rho = "!git reset --hard $(git remote-branch)"
	git = !exec git
	setup-fetching-prs = "!git config --add remote.origin.fetch '+refs/pull/*/head:refs/remotes/origin/pr/*' && git fetch origin"
    delete-merged-branches = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
[rerere]
	enabled = true
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
